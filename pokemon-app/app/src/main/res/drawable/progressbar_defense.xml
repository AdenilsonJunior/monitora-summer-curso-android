<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--id para identificação que é o background da progress-->
    <item android:id="@android:id/background">
        <shape>
            <!--arredondamento das bordas-->
            <corners android:radius="5dip" />
            <!--angulo das cores-->
            <!--cores do cento, inicio e fim-->
            <!--posição do centro-->
            <gradient
                android:angle="270"
                android:centerColor="#8a9389"
                android:centerY="0.75"
                android:endColor="#a1aba0"
                android:startColor="#b8c4b7" />
        </shape>
    </item>

    <!--id para identificação que é o background da progress-->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <!--arredondamento das bordas-->
                <corners android:radius="5dip" />
                <!--angulo das cores-->
                <!--cores do cento, inicio e fim-->
                <!--posição do centro-->
                <gradient
                    android:angle="270"
                    android:centerColor="#1870ee"
                    android:centerY="0.75"
                    android:endColor="#2f7eef"
                    android:startColor="#468cf1" />
            </shape>
        </clip>
    </item>

</layer-list>